{% extends "base.jinja2" %}

{% block content %}
<h1>Registration</h1>
<form id="registration-form" method="POST" action="{{request.route_url('auth')}}">
  <input type="text" name="username">
  <input type="email" name="email">
  <input type="password" name="password">
  <input type="submit" name="submit" value="Sign-up">
</form>

<h1>Sign-in</h1>
<form
  id="signin-form"
  method="GET"
  action="{{request.route_url('auth')}}">

  <input type="text" name="username">
  <input type="password" name="password" pattern="[0-9]{8}">
  <input type="submit" name="submit" value="Sign-in">
</form>
{% endblock content %}
